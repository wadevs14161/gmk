// ORM model for consulting form submissions
model ConsultingFormSubmission {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  firstName       String
  lastName        String
  email           String
  topics          String   // Comma-separated values for checkboxes
  lineAccount     String?
  occupation      String
  howDidYouKnow   String

  date1           DateTime
  time1           String
  date2           DateTime
  time2           String
  date3           DateTime
  time3           String

  details         String
}
